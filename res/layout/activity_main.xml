<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity" >

    <ImageButton
        android:id="@+id/imageButton_hotel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageButton_flight"
        android:layout_marginRight="10dp"
        android:background="#000000"
        android:src="@drawable/hotel" />

    <ImageButton
        android:id="@+id/imageButton_loggin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton_hotel"
        android:layout_alignTop="@+id/imageButton_orders"
         android:background="#000000"
        android:src="@drawable/loggin" />

    <ImageButton
        android:id="@+id/imageButton_flight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="32dp"
        android:background="#000000"
        android:src="@drawable/flight" />

    <ImageButton
        android:id="@+id/imageButton_orders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton_flight"
        android:layout_centerVertical="true"
        android:background="#000000"
        android:src="@drawable/orders" />

    <ImageButton
        android:id="@+id/imageButton_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton_orders"
        android:layout_below="@+id/imageButton_orders"
        android:layout_marginTop="23dp"
        android:background="#000000"
        android:src="@drawable/payment" />

</RelativeLayout>